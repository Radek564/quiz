<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sd.quiz.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik: 0"
            android:layout_alignParentLeft="true"
            android:id="@+id/score_text"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Najlepszy wynik: 0"
            android:layout_alignParentRight="true"
            android:id="@+id/highscore"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Pytanie 1"
        android:layout_alignParentLeft="true"
        android:id="@+id/question"
        android:textSize="20sp"
        android:padding="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcja 1"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/choice1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcja 2"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/choice2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcja 3"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/choice3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcja 4"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/choice4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poddaj siÄ™"
        android:background="#B71C1C"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/quit" />

</LinearLayout>
